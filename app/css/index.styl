@import 'base.styl';
body
	background:url('/images/top.jpg') no-repeat center top #075498	
	width:100%
	header
		width: 1000px
		margin:0 auto
		overflow: hidden
		h1 
			margin 40px 0
			font-size 30px
		nav 
			margin-bottom: 40px
			.nav-list li 
				margin-right: 30px
				display: inline-block
				a  
					position: relative
					font-size: 18px
					color: ftColor
					text-decoration: none
					&:hover .en
						transform: translateY(0)
						opacity: 1
					span 
						z-index: 2
						display: block
						&.en
							z-index: 1
							display: block
							font-size: 12px
							text-align: center
							opacity: 0
							// -webkit-transition: -webkit-transform 0.3s, opacity 0.3s
							// -moz-transition: -moz-transform 0.3s, opacity 0.3s
							transition: transform 0.3s, opacity 0.3s
							// -webkit-transform: translateY(-100%)
							// -moz-transform: translateY(-100%)
							transform: translateY(-100%)

	article
		width: 1000px
		margin:0 auto
		overflow: hidden
		background: url(/images/articlebg.png) repeat
		.container
			background: url(/images/articlebg.png) repeat
			overflow: hidden
			margin: 20px
			box-shadow: #075498 0px 1px 10px
			.title
				display: block
				position: relative
				font-size: 1.5em
				margin: .83em 0
				font-weight: bold
				b   
					font-size: 22px
					margin-bottom: 20px
					background: #2a7497
					padding: 10px 0
					width: 200px
					text-align: center
					border-radius: 0 30px 30px 0
					box-shadow: #21566f 1px 1px 1px
					border-left: #dae1e4 6px solid
					display: block
					margin: 30px 0 0 30px
				span 
					position: absolute
					right: 20px
					top: 20px
					text-shadow: rgba(7, 84, 152, 0.71) 1px 1px 1px
					font-size: 14px
			.article-list
				margin: 30px 0 0 0
				padding: 0
				position: relative
				&:before
					content: ''
					position: absolute
					top: 0
					bottom: 0
					width: 5px
					background: #afdcf8
					left: 158px
					margin-left: -10px
				li  
					position: relative
					.ar-time
						display: block
						width: 100px
						padding: 5px 30px 5px 0
						position: absolute
						margin-left: 20px
						transition: all 1s
						& span
							display: block
							text-align: right
							font-size: 22px
							color: #3594cb
							&:first-child
								font-size: 14px
								color: #bdd0db
					.ar-round
						width: 10px
						height: 10px
						font-family: 'ecoico'
						speak: none
						font-style: normal
						font-weight: normal
						font-variant: normal
						text-transform: none
						font-size: 1.4em
						line-height: 40px
						-webkit-font-smoothing: antialiased
						position: absolute
						color: ftColor
						background: #46a4da
						border-radius: 50%
						box-shadow: 0 0 0 3px #afdcf8
						text-align: center
						left: 170px
						top: 15px
						margin: 0 0 0 -25px
					.ar-content
						margin: 0 50px 15px 180px
						background: #3594cb
						color: ftColor
						padding: 2em
						position: relative
						border-radius: 5px
						height: 150px
						&:after
							right: 100%
							border: solid transparent
							content: " "
							height: 0
							width: 0
							position: absolute
							pointer-events: none
							border-right-color: #3594cb
							border-width: 10px
							top: 10px
						h2  	
							margin-top: 0px
							padding: 0 0 10px 0
							font-size: 16px
							text-shadow: rgba(7, 84, 152, 0.71) 1px 1px 1px
							position: relative
							.ar-num
								position: absolute
								right: 0
								top: 5px
								font-size: 14px
								font-weight: normal
						.ar-pic
							width: 200px
							height: 120px
							overflow: hidden
							display: block
							float: left
							margin-right: 20px
							img 
								display: block
								width: 100%
								height: 100%
								margin: auto
						.ar-summary
							float: right
							width: 450px
							height: 80px
							overflow: hidden
							line-height 1.4
						.ar-read
							position: absolute
							right: 30px
							bottom: 30px
							background: #075498
							color: ftColor
							padding: 5px 10px
							margin: 20px 0 0 0
							border-radius: 5px	
					&:hover .ar-time
						background: #afdcf8
						border-radius: 20px 0 0 20px
						color: #075498
					&:hover .ar-time span:first-child
						color: #075498
			.ar-page
				margin: 20px 0
				text-align: center
				width: 100%
				overflow: hidden
    			.ar-page a 
					margin: 0 2px
					height: 26px
					line-height: 26px
					border: #89c9ef 1px solid
					border-radius: 50%
					width: 26px
					text-align: center
					display: inline-block
					color: #aee1ff
   				 				
	footer
		width: 1000px
		margin:0 auto
		overflow: hidden
		text-align: center
		padding: 20px 0
		font-size: 16px
		a 
			font-size: 16px
			color:#fff