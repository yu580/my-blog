.text-center
  text-align: center
.pointer
  cursor pointer
/*超出文字隐藏*/
.nowrap
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
.fl
  float left
.fr
  float right
.hide
  display: none
.show
  display: block
  
button
  -webkit-appearance none
  -moz-appearance none
  appearance none
  background-color #007fff
  color #fff
  border-radius 2px
  border none
  padding .5rem 1.3rem
  outline none
  transition background-color .3s,color .3s
  cursor pointer
