@import 'base.styl';
@import '../js/components/login/login.styl';
body
	background:url('/images/top.jpg') no-repeat center top #075498	
	width:100%
	font-size: 16px
	header
		width: 1000px
		margin:0 auto
		overflow: hidden
		h1 
			margin 40px 0
			font-size 30px
		nav 
			margin-bottom: 40px
			.nav-list li 
				margin-right: 30px
				display: inline-block
				a  
					position: relative
					font-size: 18px
					color: ftColor
					text-decoration: none
					&:hover .en
						transform: translateY(0)
						opacity: 1
					span 
						z-index: 2
						display: block
						&.en
							z-index: 1
							display: block
							font-size: 12px
							text-align: center
							opacity: 0
							// -webkit-transition: -webkit-transform 0.3s, opacity 0.3s
							// -moz-transition: -moz-transform 0.3s, opacity 0.3s
							transition: transform 0.3s, opacity 0.3s
							// -webkit-transform: translateY(-100%)
							// -moz-transform: translateY(-100%)
							transform: translateY(-100%)
			.login-btn
				cursor: pointer

	article
		width: 1000px
		margin:0 auto
		overflow: hidden
		background: url(/images/articlebg.png) repeat
		.container
			background: url(/images/articlebg.png) repeat
			overflow: hidden
			margin: 20px
			box-shadow: #075498 0px 1px 10px
			.detail-title
				font-size: 2em
				margin: .83em 0
				font-weight: bold
				text-align: center
			.author
				text-align: center
				.name
					color:#4ce0b8
				.time
					color:#4ce0b8
			.show-content
				padding: 30px	
				font-size: 14px
				p
					line-height: 1.4em
					margin: 0 0 25px
					b 
						font-weight: 700
						font-style: normal
						font-size: 18px
					i 
						font-style: normal
			.comment
				// background-color: #ffffff
				border-radius: 5px
				width: 850px
				margin: 0 auto 20px
				overflow: hidden
				#comment-id
					width: 750px
					height: 70px
					line-height: 1.4
					text-indent: 2em
					padding: 5px
					border: 1px solid #075498
					box-sizing: border-box
				#comment-sub
					width: 100px
					height: 70px
					line-height: 70px
					font-size: 20px
					text-align: center
					cursor: pointer
					background-color: #075498
			.title
				display: block
				position: relative
				font-size: 1.5em
				margin: .83em 0
				font-weight: bold
				b   
					font-size: 22px
					margin-bottom: 20px
					background: #2a7497
					padding: 10px 0
					width: 200px
					text-align: center
					border-radius: 0 30px 30px 0
					box-shadow: #21566f 1px 1px 1px
					border-left: #dae1e4 6px solid
					display: block
					margin: 30px 0 0 30px
				p 
					position: absolute
					right: 20px
					top: 20px
					text-shadow: rgba(7, 84, 152, 0.71) 1px 1px 1px
					font-size: 16px	

